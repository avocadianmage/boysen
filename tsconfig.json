{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "outDir": "src/ts-build",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "baseUrl": ".",
        "paths": {
            "*": [ "override-typings/*" ]
        }
    },
    "include": [
        "src/ts/**/*"
    ],
    "exclude": []
}